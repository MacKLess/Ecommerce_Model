<div class="col s4" id="product-<%= product.id %>">
<h4><%= link_to product.name, product_path(product), id: "show_product_#{product.id}", remote: true %></h4>
<p><%= product.description %></p>
<p><%= number_to_currency product.price %></p>
<p><%= product.quantity %></p>
<%= form_for @order_item do |f| %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.number_field :quantity, placeholder: "Enter quantity here!", min: 1 %>
  <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
<% end %>
</div>
